{
  "name": "toolbox-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "lint-staged": "lint-staged",
    "format": "prettier --write",
    "prepare": "husky"
  },
  "packageManager": "pnpm@8.15.6",
  "homepage": "https://github.com/dazum-dev/toolbox",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": [
      "pnpm format --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ]
  }
}
