{
  "name": "@toolbox/dev",
  "version": "0.2.0",
  "description": "Dedicated development server for dazum framework",
  "type": "module",
  "author": "Dazum Dev <dazum.dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "pnpm check-types && tsup",
    "build:watch": "tsup --watch",
    "check-types": "tsc --noEmit",
    "dev": "tsx --watch src/cli.ts",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dazum-dev/toolbox.git",
    "directory": "packages/dev"
  },
  "bin": {
    "toolbox": "./dist/cli.js"
  },
  "bugs": {
    "url": "https://github.com/dazum-dev/toolbox/issues"
  },
  "homepage": "https://github.com/dazum-dev/toolbox/tree/main/packages/dev#readme",
  "exports": {
    ".": {
      "types": "./dist/cli.d.ts",
      "default": "./dist/cli.js"
    }
  },
  "devDependencies": {
    "@toolbox/eslint-config": "workspace:^",
    "@toolbox/plugin-react": "workspace:^",
    "@types/compression": "^1.8.1",
    "@types/node": "^22.15.3",
    "@types/ws": "^8.18.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6"
  },
  "dependencies": {
    "@tinyhttp/app": "^3.0.1",
    "@tinyhttp/cookie-parser": "^2.0.6",
    "@toolbox/config": "workspace:^",
    "@toolbox/node": "workspace:^",
    "chokidar": "^4.0.3",
    "compression": "^1.8.1",
    "kolorist": "^1.8.0",
    "lru-send": "^0.1.3",
    "milliparsec": "^5.1.0",
    "sade": "^1.8.1",
    "sirv": "^3.0.2",
    "ws": "^8.18.3"
  }
}
